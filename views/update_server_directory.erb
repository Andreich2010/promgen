<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="<%= to("/server_directory/") %>">Server directory list</a></li>
  <li class="active">Update project</li>
</ol>

<div class="page-header">
  <h1>Update server directory configuration</h1>
</div>

<div class="row">
  <form method="post" action="<%= to("/server_directory/#{@server_directory.id}/update") %>">
    <div class="form-group">
      <label for="inputName">Type</label>
      <span class="form-control"><%= @server_directory.class.name %></span>
    </div>
    <% @server_directory.class.properties.each do |prop| %>
        <div class="form-group">
          <label for="<%= "form-#{prop[:name]}" %>">
            <%= prop[:name] %>
          </label>
          <input type="text" class="form-control"  id="<%= "form-#{prop[:name]}" %>" name="<%= prop[:name] %>"
                 value="<%= @server_directory.instance_variable_get("@#{prop[:name]}") %>" required>
        </div>
    <% end %>

    <button type="submit" class="btn btn-default">Register</button>
  </form>
</div>
