<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="<%= to("/project/#{@project.id}") %>"><%= @project.name %></a></li>
    <li class="active">Register new farm</li>
</ol>

<div class="page-header">
    <h1>Register new farm for <i><%= @project.name %></i></h1>
</div>

<div class="row">
<div class="col-md-4">
  <form method="post" action="<%= to("/project/#{@project.id}/farm/register") %>">
    <div class="form-group">
      <label for="inputName">Name</label>
      <input type="text" name="name" class="form-control" id="inputName" maxlength="100" required>
    </div>

    <button type="submit" class="btn btn-default">Register</button>
  </form>
</div>
</div>

